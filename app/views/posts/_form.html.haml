= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_field :content
  .actions
    = f.submit 'Save'

  #post-attachments
  - @post.pictures.each do |picture|
    = hidden_field_tag 'images[]', picture.id
  - @post.attachments.each do |attachment|
    = hidden_field_tag 'attachments[]', attachment.id

